<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/gray1">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25px"
    android:layout_marginRight="25px"
    android:layout_marginTop="20px"
    app:cardBackgroundColor="@color/write"
    app:cardCornerRadius="16px"
    app:contentPadding="20px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sift_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="6px"
                android:src="@mipmap/sift" />

            <TextView
                android:id="@+id/sift_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6px"
                android:text="有哪些关于暗恋的诗句"
                android:textColor="@color/black"
                android:textSize="35px"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/sift_image" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/sift_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="25px"
            android:visibility="gone"
            android:lines="2"
            android:text="如题，任何与暗恋沾边的都可以"
            android:textColor="@color/grayness"
            android:textSize="25px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px">

            <TextView
                android:id="@+id/sift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:text="你的月亮表达我的心"
                android:textColor="@color/black"
                android:textSize="20px" />

            <TextView
                android:id="@+id/sift_createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="80px"
                android:text="12月28日 10:47"
                android:textColor="@color/grayness"
                android:textSize="20px" />

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35px"
                android:src="@mipmap/article_comment_selected" />

            <TextView
                android:id="@+id/sift_replyTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="6"
                android:layout_marginRight="10px"
                android:textColor="@color/grayness"
                android:textSize="20px" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</android.support.v7.widget.CardView>


</com.zhy.autolayout.AutoLinearLayout>
