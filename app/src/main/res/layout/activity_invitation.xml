<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayback">

    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imag_return"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:src="@drawable/jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀请朋友"
            android:textColor="@color/black"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/grayness"
        />



    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/mine_datum"
        android:padding="25px"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="32px"
        android:background="#fff"
        android:paddingBottom="15px">

        <ImageView
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:src="@mipmap/qqzone"
            android:id="@+id/imageView6" />


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/next_indicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到QQ空间"
            android:layout_marginLeft="20px"
            android:layout_marginTop="7px"
            android:textColor="@color/black"
            android:textSize="25px"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/imageView6"
            android:id="@+id/textView3" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />



    <View
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:background="#F7F7F7" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:padding="22px"
        android:id="@+id/mine_invitation"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="9px"
        android:layout_marginRight="9px"
        android:background="#fff"
        android:paddingBottom="15px">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:src="@mipmap/qq"
            android:id="@+id/imageView6" />


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/next_indicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到QQ"
            android:layout_marginLeft="20px"
            android:layout_marginTop="7px"
            android:textColor="@color/black"
            android:textSize="25px"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/imageView6"
            android:id="@+id/textView3" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:background="#F7F7F7" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:padding="22px"
        android:id="@+id/mine_tickling"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="9px"
        android:layout_marginRight="9px"
        android:background="#fff"
        android:paddingBottom="15px">
        <ImageView
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:src="@mipmap/wechat"
            android:id="@+id/imageView6" />


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/next_indicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到微信"
            android:layout_marginLeft="20px"
            android:layout_marginTop="7px"
            android:textColor="@color/black"
            android:textSize="25px"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/imageView6"
            android:id="@+id/textView4" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="650px"
        android:layout_height="1px"
        android:layout_gravity="right"
        android:background="#cccccc" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:padding="22px"
        android:id="@+id/mine_setting"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="9px"
        android:layout_marginRight="9px"
        android:background="#fff"
        android:paddingBottom="10px">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:src="@mipmap/friend_circle_icon"
            android:id="@+id/imageView7" />


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/next_indicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到朋友圈"
            android:layout_marginLeft="20px"
            android:layout_marginTop="7px"
            android:textColor="@color/black"
            android:textSize="25px"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/imageView7"
        />

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:padding="22px"
        android:id="@+id/mine_setting"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="9px"
        android:layout_marginRight="9px"
        android:background="#fff"
        android:paddingBottom="10px">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:src="@mipmap/weibo"
            android:id="@+id/imageView7" />


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/next_indicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到微博"
            android:layout_marginLeft="20px"
            android:layout_marginTop="7px"
            android:textColor="@color/black"
            android:textSize="25px"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/imageView7"
            />

    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/grayness"
        />

</com.zhy.autolayout.AutoLinearLayout>
