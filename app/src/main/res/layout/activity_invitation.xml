<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayback"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imag_return"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:src="@drawable/jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀请朋友"
            android:textColor="@color/black"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/grayness" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/mine_datum"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="32px"
        android:background="#fff"
        android:padding="25px"
        android:paddingBottom="15px">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/next_indicator" />

        <ImageView
            android:id="@+id/qqzone"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/qqzone" />


        <TextView
            android:id="@+id/shear_qqSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="7px"
            android:layout_toRightOf="@id/qqzone"
            android:text="分享到QQ空间"
            android:textColor="@color/black"
            android:textSize="25px" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:background="#cccccc" />


    <View
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:background="#F7F7F7" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/mine_invitation"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="9px"
        android:layout_marginRight="9px"
        android:background="#fff"
        android:padding="22px"
        android:paddingBottom="15px">


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/next_indicator" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/qq" />

        <TextView
            android:id="@+id/shear_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="7px"
            android:layout_toEndOf="@+id/imageView6"
            android:text="分享到QQ"
            android:textColor="@color/black"
            android:textSize="25px" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:background="#F7F7F7" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/mine_tickling"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="9px"
        android:layout_marginRight="9px"
        android:background="#fff"
        android:padding="22px"
        android:paddingBottom="15px">

        <ImageView
            android:id="@+id/wechat"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:src="@mipmap/wechat" />


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/next_indicator" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="7px"
            android:layout_toRightOf="@id/wechat"
            android:text="分享到微信"
            android:textColor="@color/black"
            android:textSize="25px" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="650px"
        android:layout_height="1px"
        android:layout_gravity="right"
        android:background="#cccccc" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="9px"
        android:layout_marginRight="9px"
        android:background="#fff"
        android:padding="22px"
        android:paddingBottom="10px">

        <ImageView
            android:id="@+id/friend_circle_icon"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:src="@mipmap/friend_circle_icon" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/next_indicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="7px"
            android:layout_toRightOf="@id/friend_circle_icon"
            android:text="分享到朋友圈"
            android:textColor="@color/black"
            android:textSize="25px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/mine_setting"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="9px"
        android:layout_marginRight="9px"
        android:background="#fff"
        android:padding="22px"
        android:paddingBottom="10px">

        <ImageView
            android:id="@+id/weibo"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:src="@mipmap/weibo" />


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/next_indicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="7px"
            android:layout_toRightOf="@id/weibo"
            android:text="分享到微博"
            android:textColor="@color/black"
            android:textSize="25px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/grayness" />

</com.zhy.autolayout.AutoLinearLayout>
