<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1"
    android:orientation="vertical">
    <!--logo头-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240px">


    </com.zhy.autolayout.AutoRelativeLayout>


    <!--华丽丽的分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#22000000" />


    <!--输入用于注册的手机号-->
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/forgetpass_phone"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/write"
        android:hint="输入用于注册的手机号"
        android:padding="20px" />
    <!--华丽丽的分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#22000000" />


    <!--获取用户的验证码-->
    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/forgetpass_VerificationCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/write"
            android:hint="输入验证码"
            android:padding="20px" />

        <android.support.v7.widget.CardView
            android:id="@+id/for_cardView_get_VerificationCode"
            android:layout_width="220px"
            android:layout_height="80px"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20px"
            app:cardBackgroundColor="@color/btn_yellow"
            app:cardCornerRadius="10px">

            <Button
                android:id="@+id/forgetpass_btn_get_VerificationCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/black" />
        </android.support.v7.widget.CardView>
    </com.zhy.autolayout.AutoFrameLayout>


    <!--华丽丽的分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#22000000" />


    <!--华丽丽的分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="40px"
        android:background="#22000000" />


    <!--密码-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/write"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/forgetpass_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="设置密码"
            android:inputType="textPassword"
            android:paddingLeft="20px" />

        <CheckBox
            android:id="@+id/forgetpass_checkbox_show"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginRight="30px"
            android:background="@drawable/watch_password_selector"
            android:button="@null" />
    </com.zhy.autolayout.AutoLinearLayout>
    <!--华丽丽的分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#22000000" />
    <!--注册按钮-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="60px"
        app:cardBackgroundColor="@color/btn_yellow"
        app:cardCornerRadius="8px">

        <TextView
            android:id="@+id/forgetpass_tv_commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/black"
            android:textSize="20px" />
    </android.support.v7.widget.CardView>

</com.zhy.autolayout.AutoLinearLayout>
