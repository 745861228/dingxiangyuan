<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/user_login"
                android:layout_width="fill_parent"
                android:layout_height="300px"
                android:background="@mipmap/profile_bg">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="50px"
                    android:src="@mipmap/user_icon_default" />

                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_image"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="12px"
                    android:text="张亚州"
                    android:textColor="#fff"
                    android:textSize="22px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_alignTop="@+id/user"
                    android:layout_toEndOf="@+id/user"
                    android:src="@drawable/mine_malefemale" />


                <TextView
                    android:id="@+id/attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="12px"
                    android:text="关注"
                    android:textColor="#fff"
                    android:textSize="22px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/attention"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="22px" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/mine_datum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="15px"
                android:background="#fff"
                android:paddingBottom="15px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/me_title_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100px"
                    android:text="基本资料"
                    android:textColor="@color/black"
                    android:textSize="20px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/next_indicator" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/mine_constellation"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:background="#fff"
                android:paddingBottom="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12px"
                    android:background="#e8e8e8"
                    android:paddingBottom="9px"
                    android:paddingEnd="12px"
                    android:paddingLeft="12px"
                    android:paddingTop="9px"
                    android:text="魔蝎座"
                    android:textSize="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120px"
                    android:background="#e8e8e8"
                    android:paddingBottom="9px"
                    android:paddingEnd="12px"
                    android:paddingLeft="12px"
                    android:paddingTop="9px"
                    android:text="恋爱"
                    android:textSize="20px"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12px"
                android:background="#f0f0f0" />

            <RelativeLayout
                android:id="@+id/mine_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9px"
                android:layout_marginRight="9px"
                android:background="#fff"
                android:paddingBottom="15px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:src="@mipmap/me_title_post" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90px"
                    android:text="我的帖子"
                    android:textColor="@color/black"
                    android:textSize="20px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15px"
                    android:src="@mipmap/next_indicator" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12px"
                android:background="#f0f0f0" />

            <RelativeLayout
                android:id="@+id/mine_tickling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9px"
                android:layout_marginRight="9px"
                android:background="#fff"
                android:paddingBottom="15px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:src="@mipmap/me_title_feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90px"
                    android:text="意见反馈"
                    android:textColor="@color/black"
                    android:textSize="20px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15px"
                    android:src="@mipmap/next_indicator" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/mine_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9px"
                android:layout_marginRight="9px"
                android:background="#fff"
                android:paddingBottom="10px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:src="@mipmap/me_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90px"
                    android:text="设置"
                    android:textColor="@color/black"
                    android:textSize="20px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15px"
                    android:src="@mipmap/next_indicator" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
