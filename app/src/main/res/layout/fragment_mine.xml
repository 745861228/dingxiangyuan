<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

    <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/user_login"
                android:layout_width="fill_parent"
                android:layout_height="400px"
                android:background="@mipmap/profile_bg">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="50px"
                    android:src="@mipmap/user_icon_default" />

                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_image"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20px"
                    android:text="郭涛"
                    android:textColor="#fff"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_alignTop="@+id/user"
                    android:layout_toEndOf="@+id/user"
                    android:src="@drawable/mine_malefemale" />


                <TextView
                    android:id="@+id/attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20px"
                    android:text="关注"
                    android:textColor="#fff"
                    android:textSize="22px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/attention"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="22px" />
            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/mine_datum"
                android:padding="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="15px"
                android:background="#fff"
                android:paddingBottom="15px">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/me_title_profile"
                    android:id="@+id/imageView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50px"
                    android:text="修改资料点这里哦"
                    android:textColor="@color/graynes"
                    android:textSize="20px"
                    android:id="@+id/textView2" />
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/next_indicator" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="基本资料"
                    android:textColor="@color/black"
                    android:textSize="20px"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_toEndOf="@+id/imageView6"
                    android:id="@+id/textView3" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:padding="20px"
                android:id="@+id/mine_constellation"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:background="#fff"
                android:paddingBottom="15px">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12px"
                    android:background="#e8e8e8"
                    android:textColor="@color/graynes"
                    android:paddingBottom="9px"
                    android:paddingEnd="12px"
                    android:paddingLeft="12px"
                    android:paddingTop="9px"
                    android:text="魔蝎座"
                    android:textSize="25px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120px"
                    android:background="#e8e8e8"
                    android:textColor="@color/graynes"
                    android:paddingBottom="9px"
                    android:paddingEnd="12px"
                    android:paddingLeft="12px"
                    android:paddingTop="9px"
                    android:text="恋爱"
                    android:textSize="25px"/>

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12px"
                android:background="#F7F7F7" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:padding="22px"
                android:id="@+id/mine_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9px"
                android:layout_marginRight="9px"
                android:background="#fff"
                android:paddingBottom="15px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:src="@mipmap/me_title_post" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90px"
                    android:text="我的帖子"
                    android:textColor="@color/black"
                    android:textSize="20px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15px"
                    android:src="@mipmap/next_indicator" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12px"
                android:background="#F7F7F7" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:padding="22px"
            android:id="@+id/mine_tickling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9px"
            android:layout_marginRight="9px"
            android:background="#fff"
            android:paddingBottom="15px">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15px"
                android:src="@mipmap/me_title_feedback" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90px"
                android:text="意见反馈"
                android:textColor="@color/black"
                android:textSize="20px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15px"
                android:src="@mipmap/next_indicator" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
                android:layout_width="650px"
                android:layout_height="1px"
                 android:layout_gravity="right"
                android:background="#cccccc" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:padding="22px"
                android:id="@+id/mine_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9px"
                android:layout_marginRight="9px"
                android:background="#fff"
                android:paddingBottom="10px">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:src="@mipmap/me_setting" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90px"
                    android:text="设置"
                    android:textColor="@color/black"
                    android:textSize="20px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15px"
                    android:src="@mipmap/next_indicator" />

            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
